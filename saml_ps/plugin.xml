<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://plugin.powerschool.pearson.com"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation='http://plugin.powerschool.pearson.com plugin.xsd'
  name="KSD Conference Manager"
  version="0.1.6"
  description="Provides PowerSchool guardian single sign-on link to conference manager application." >

  <saml name="default-sp"
    entity-id="default-sp"
    base-url="http://52.24.3.102/conference-manager/index.php" 
    metadata-url="http://52.24.3.102/conference-manager/simplesamlphp/www/module.php/saml/sp/metadata.php/default-sp" >

    <links>
      <link display-text="KSD Conference Manager" 
        title="Log in to Conference Manager" 
        path="http://52.24.3.102/conference-manager/index.php/sso/index">
        <ui_contexts>
          <ui_context id="guardian.header" />
        </ui_contexts>
      </link>
    </links>
    <attributes>
      <user type="guardian">
        <attribute name="FIRSTNAME" />
        <attribute name="LASTNAME" />
        <attribute name="institutions" attribute-value="school_number" /> 
        <attribute name="students" attribute-value="student_number" />
      </user>
    </attributes>
  </saml>

  <publisher name="Kentfield School District">
    <contact email="webmaster@kentfieldschools.org" />
  </publisher>  
</plugin>
